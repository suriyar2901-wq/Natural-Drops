# Environment Variables for Natural Drops Backend
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Database Configuration (Prisma Cloud PostgreSQL)
DATABASE_URL=jdbc:postgresql://db.prisma.io:5432/postgres?sslmode=require&connectTimeout=30&socketTimeout=30&tcpKeepAlive=true
DATABASE_USERNAME=your_database_username
DATABASE_PASSWORD=your_database_password

# Email Configuration (Gmail SMTP)
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# JWT Secret (minimum 32 characters for HS256)
JWT_SECRET=your-secure-random-secret-key-minimum-32-characters-long

# Frontend Base URL (optional, has default)
FRONTEND_BASE_URL=http://localhost:8081

# Server Port (optional, defaults to 8080)
PORT=8080
