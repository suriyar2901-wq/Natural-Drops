<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot defaults -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console Appender - Output logs to console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- Ensure immediate flush for real-time log visibility -->
        <immediateFlush>true</immediateFlush>
        <!-- Use System.out instead of System.err for better visibility -->
        <target>System.out</target>
    </appender>
    
    <!-- File Appender - Optional file logging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Root logger - INFO level by default -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <!-- Application-specific loggers - DEBUG level -->
    <logger name="com.naturaldrops" level="DEBUG"/>
    <logger name="com.naturaldrops.config" level="DEBUG"/>
    <logger name="com.naturaldrops.controller" level="DEBUG"/>
    <logger name="com.naturaldrops.service" level="DEBUG"/>
    <logger name="com.naturaldrops.repository" level="DEBUG"/>
    
    <!-- Hibernate SQL logging -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    
    <!-- Spring Framework logging -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
    
    <!-- Reduce noise from other libraries -->
    <logger name="org.apache" level="WARN"/>
    <logger name="com.zaxxer" level="WARN"/>
    <logger name="org.hibernate.engine" level="INFO"/>
</configuration>

